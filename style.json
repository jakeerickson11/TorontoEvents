{
  "version": 8,
  "name": "Toronto Minimal (Calm Roads)",
  "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",
   "sources": {
    "toronto": {
      "type": "vector",
      "url": "pmtiles://https://pub-083e9ab60fc847608e085d99437174fb.r2.dev/toronto.pmtiles"
    
  }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": { "background-color": "#171717" }
    },

    { "id": "water", "type": "fill", "source": "toronto", "source-layer": "water",
      "paint": { "fill-color": "#15394f" } },

    { "id": "park", "type": "fill", "source": "toronto", "source-layer": "park",
      "paint": { "fill-color": "#171717" } },

    { "id": "landuse", "type": "fill", "source": "toronto", "source-layer": "landuse",
      "filter": ["in","class","residential","suburban","rural","farmland","meadow","grass"],
      "paint": { "fill-color": "#171717" } },

    { "id": "building", "type": "fill", "source": "toronto", "source-layer": "building",
      "paint": {
        "fill-color": "#1C1C1C",
        "fill-outline-color": "rgba(0,0,0,0)"
      }
    },

    {
      "id": "road-casing",
      "type": "line",
      "source": "toronto",
      "source-layer": "transportation",
      "layout": { "visibility": "none" }
    },

    {
      "id": "road",
      "type": "line",
      "source": "toronto",
      "source-layer": "transportation",
      "filter": ["in","class",
        "minor","service","residential","path","track","cycleway","footway","pedestrian"
      ],
      "layout": { "line-join": "round", "line-cap": "round" },
      "paint": {
        "line-color": [
          "match", ["get","class"],
          ["path","track","cycleway","footway","pedestrian"], "#000000",
          ["service","residential","minor"], "#707070",
          "#707070"
        ],
        "line-opacity": [
          "interpolate", ["linear"], ["zoom"],
          10, 0.00,
          13, 0.08,
          15, 0.16,
          16, 0.28,
          17, 0.45
        ],
        "line-width": ["interpolate", ["linear"], ["zoom"], 8, 0.25, 12, 1.1, 15, 2.2],
        "line-gap-width": 0
      }
    },

    {
      "id": "road-major",
      "type": "line",
      "source": "toronto",
      "source-layer": "transportation",
      "filter": ["in","class","primary","secondary","tertiary"],
      "layout": { "line-join": "round", "line-cap": "round" },
      "paint": {
        "line-color": "#575353",
        "line-width": ["interpolate", ["linear"], ["zoom"], 8, 0.6, 12, 2.2, 15, 5.5],
        "line-gap-width": 0
      }
    },


    {
      "id": "road-highway",
      "type": "line",
      "source": "toronto",
      "source-layer": "transportation",
      "filter": ["in","class","motorway","trunk"],
      "layout": { "line-join": "round", "line-cap": "round" },
      "paint": {
        "line-color": "#c4c4c4",
        "line-width": ["interpolate", ["linear"], ["zoom"], 8, 0.8, 12, 3.0, 15, 6.5],
        "line-gap-width": 0
      }
    },

    {
      "id": "road-label",
      "type": "symbol",
      "source": "toronto",
      "source-layer": "transportation_name",
      "filter": ["in","class","primary","secondary","tertiary","trunk","motorway"],
      "layout": {
        "symbol-placement": "line",
        "text-field": ["get", "name"],
        "text-font": ["Noto Sans Regular"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 10, 10, 14, 12]
      },
      "paint": {
        "text-color": "#5a5f66",
        "text-halo-color": "#ffffff",
        "text-halo-width": 0.2
      }
    },

    {
      "id": "place-labels",
      "type": "symbol",
      "source": "toronto",
      "source-layer": "place",
      "minzoom": 5,
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Noto Sans Regular"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 6, 11, 12, 16]
      },
      "paint": {
        "text-color": "#444",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1.2
      }
    },

    {
      "id": "boundary",
      "type": "line",
      "source": "toronto",
      "source-layer": "boundary",
      "layout": { "visibility": "none" }
    }
  ]
}
